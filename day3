    <script>
        age=prompt("enter your age?")
        name=prompt("enter your name?")
        if(age<18){

            alert(name+ "you are too young to marry")
        }else if(age>35){
            alert(name+ "your are too old to marry")
        }else{
            alert(name + "perfect age to marry")
        }
    alert("welcome to USA")
        </script>
